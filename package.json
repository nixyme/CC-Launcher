{
  "name": "claude-code-launcher",
  "version": "1.0.2",
  "description": "Claude Code 万能启动器 - 基于 Electron",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"python3 backend/server.py\" \"electron .\"",
    "build": "electron-builder"
  },
  "keywords": [
    "claude",
    "electron",
    "launcher"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "build": {
    "appId": "com.claude.launcher",
    "productName": "CC万能启动器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "backend/**/*",
      "data/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/dist/cc-launcher-backend",
        "to": "backend/cc-launcher-backend"
      },
      {
        "from": "build/icon.png",
        "to": "build/icon.png"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64"]
        }
      ]
    },
    "dmg": {
      "title": "CC万能启动器",
      "icon": "build/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
