{
  "name": "start-everything",
  "version": "1.1.9",
  "description": "START EVERYTHING - Universal launcher for any command, project, or workflow",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac-arm64": "electron-builder --mac --arm64",
    "build:mac-x64": "electron-builder --mac --x64",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "npm run build:mac-arm64 && npm run build:mac-x64 && npm run build:win && npm run build:linux"
  },
  "keywords": [
    "claude",
    "electron",
    "launcher"
  ],
  "author": {
    "name": "nixyme",
    "email": "noreply@nixyme.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "node-cron": "^3.0.3",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.nixyme.start-everything",
    "productName": "START EVERYTHING",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*"
    ],
    "extraResources": [
      {
        "from": "build/icon.png",
        "to": "build/icon.png"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage"
        },
        {
          "target": "deb"
        }
      ],
      "category": "Development"
    },
    "dmg": {
      "title": "START EVERYTHING",
      "icon": "build/icon.icns"
    }
  }
}
